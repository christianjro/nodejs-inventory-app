<h1 class="container my-4 display-5">Genres Page</h1>
<p class="container-sm mb-4">This is a directory of all the genres saved to the application. Here you can view your 
    saved genres, edit the genre name, or delete a genre.</p>

<% genres.forEach(genre => { %> 
    <div class="container d-flex mb-3 align-items-center justify-content-between">
        <h4 class="text-nowrap m-0"><%= genre.name %></h4>
        <div class="d-flex py-1">
            <a href="/genres/<%= genre.id %>" class="btn btn-warning me-2">View</a>
            <a href="/genres/<%= genre.id %>/edit" class="btn btn-secondary me-2">Edit</a>
            <form method="POST" action="/genres/<%= genre.id %>?_method=DELETE">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
<% }) %> 
