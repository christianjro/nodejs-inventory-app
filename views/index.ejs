<div class="container d-flex flex-column justify-content-center" style="height: 95vh;">
    <div class="d-flex flex-column" style="max-width: 500px;">
        <h1 class="text-light display-1 fw-bold">Welcome to Music Library</h1>
        <p class="fs-5 text-light mt-2">Your online music album collection.</p>
    </div>
    <div class="row"> 
        <div class="text-nowrap col-5 col-sm-4 col-md-3 col-lg-2">
            <div id="hero-page-scroll" class="list-group">
                <a class="fw-semibold list-group-item list-group-item-action bg-secondary text-light" href="#learnMore">Learn more</a>
            </div>
        </div>
    </div>
</div>

<div data-bs-spy="scroll" data-bs-target="#hero-page-scroll" data-bs-offset="0" tabindex="0">
    <div id="learnMore" class="mb-5 container">
        <h3>___________________________</h3>
    </div>
    
    <div class="container my-5 pt-2">
        <h3 class="my-4">User Guide</h3>
        <div class="d-flex flex-wrap">
            <div class="card text-bg-secondary mb-3 bg-opacity-10 me-4" style="max-width: 18rem;">
                <div class="card-header">1</div>
                <div class="card-body">
                  <h5 class="card-title">Add Artist</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
            <div class="card text-bg-secondary mb-3 bg-opacity-10 me-4" style="max-width: 18rem;">
                <div class="card-header">2</div>
                <div class="card-body">
                  <h5 class="card-title">Add Genre</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
            <div class="card text-bg-secondary mb-3 bg-opacity-10 me-4" style="max-width: 18rem;">
                <div class="card-header">3</div>
                <div class="card-body">
                  <h5 class="card-title">Add Album</h5>
                  <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mb-5 container">
        <h3>___________________________</h3>
    </div>
</div>

<div class="container my-5 py-2">
    <h3 class="my-4">Recently Added Albums</h3>
    <div class="d-flex flex-wrap">
        <% albums.forEach(album => { %> 
            <div class="card me-4 bg-secondary bg-opacity-10 mb-3" style="width: 18rem;">
                <a href="/albums/<%= album.id %> " class="text-decoration-none text-light">
                    <img src="<%= album.coverImagePath %>" class="card-img-top" alt="...">
                    <div class="card-body">
                    <p class="card-text"><%= album.title %> <br> by <%= album.artist.name %></p>
                    </div>
                </a>
            </div>
        <% }) %> 
    </div>
</div>


