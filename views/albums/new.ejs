<h2 class="container my-4 display-5">New Album</h2>

<div class="container-sm p-3 mb-2 border border-secondary border-opacity-25 rounded" style="max-width: 750px;">
    <form action="/albums" method="POST" class="row g-3">
        <div class="col-md-12"> 
            <label class="form-label">Title</label>
            <input type="text" name="title" value="<%= album.title %>" class="form-control bg-dark border-secondary border-opacity-25 text-light">
        </div>
        
        <div class="col-md-6"> 
            <label class="form-label">Artist</label>
            <select name="artist" class="form-select border-secondary border-opacity-25 bg-dark text-light">
                <option selected>Select an Artist</option>
                <% artists.forEach(artist => { %> 
                    <% if (artist.id == album.artist) { %> 
                        <option selected label="<%= artist.name %>" value="<%= artist.id %>">
                    <% } else { %> 
                        <option label="<%= artist.name %>" value="<%= artist.id %>">
                    <% } %> 
                <% }) %> 
            </select>
        </div>
    
        <div class="col-md-6">
            <label class="form-label">Genre</label>
            <select name="genre" class="form-select border-secondary border-opacity-25 bg-dark text-light">
                <option selected>Select a Genre</option>
                <% genres.forEach(genre => { %> 
                    <% if (genre.id == album.genre) { %> 
                        <option selected label="<%= genre.name %>" value="<%= genre.id %>">
                    <% } else { %> 
                        <option label="<%= genre.name %>" value="<%= genre.id %>">
                    <% } %> 
                <% }) %> 
            </select>
        </div>
    
        <div class="col-md-12">
            <label class="form-label">Description</label>
            <textarea name="description" class="form-control border-secondary border-opacity-25 bg-dark text-light"><%= album.description %></textarea>
        </div>
        
        <div class="col-md-6">
            <label class="form-label">Price</label>
            <input type="number" name="price" min="1" value="<%= album.price %>" class="form-control border-secondary border-opacity-25 bg-dark text-light">
        </div>
    
        <div class="col-md-6">
            <label class="form-label">Number in Stock</label>
            <input type="number" name="numberInStock" min="1" value="<%= album.numberInStock %>" class="form-control border-secondary border-opacity-25 bg-dark text-light">
        </div>
    
        <div class="col-md-12">
            <label class="form-label">Cover Image</label>
            <input type="file" name="cover" class="filepond form-control border-secondary border-opacity-25 text-light">
        </div>
    
        <div class="d-grid col-6 mx-auto">
            <a href="/albums" class="btn btn-secondary">Cancel</a>
        </div>
    
        <div class="d-grid col-6 mx-auto">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </form>
</div>
